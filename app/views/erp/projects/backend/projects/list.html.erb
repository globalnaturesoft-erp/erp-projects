<table class="table table-advance table-hover table-striped table-checkable order-column">
    <thead>
        <tr>
            <th width='1%'>
                <%= erp_datalist_check_all %>
            </th>
            <% if get_columns(params).include?("name") %>
                <th class="sortable" sort-by='erp_projects_projects.name'>
                    <%= t('.name') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("location") %>
                <th>
                    <%= t('.location') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("category") %>
                <th>
                    <%= t('.category') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("start_date") %>
                <th>
                    <%= t('.start_date') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("completion_date") %>
                <th>
                    <%= t('.completion_date') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("status") %>
                <th><%= t('status') %></th>
            <% end %>
            <% if get_columns(params).include?("creator") %>
                <th><%= t('creator') %></th>
            <% end %>
            <% if get_columns(params).include?("created_at") %>
                <th class="sortable" sort-by='erp_projects_projects.created_at'>
                    <%= t('created_at') %>
                </th>
            <% end %>
            <th width="7%"><%= t('actions') %></th>
        </tr>
    </thead>
    <tbody>
        <% @projects.each do |project| %>
            <tr class="odd gradeX">
                <td>
                    <%= erp_datalist_check_row(id: project.id) %>
                </td>
                <% if get_columns(params).include?("name") %>
                    <td>
                        <%= project.name %>
                    </td>
                <% end %>
                <% if get_columns(params).include?("location") %>
                    <td>
                        <%= project.location %>
                    </td>
                <% end %>
                <% if get_columns(params).include?("category") %>
                    <td>
                        <%= project.category_name %>                        
                    </td>
                <% end %>
                <% if get_columns(params).include?("start_date") %>
                    <td>
                        <%= format_date(project.start_date) %>
                    </td>
                <% end %>
                <% if get_columns(params).include?("completion_date") %>
                    <td>
                        <%= format_date(project.completion_date) %>
                    </td>
                <% end %>
                <% if get_columns(params).include?("status") %>
                    <td>
                        
                    </td>
                <% end %>
                <% if get_columns(params).include?("creator") %>
                    <td>
                        <%= erp_component('avatar', {
                            user: project.creator
                        }) %>
                    </td>
                <% end %>
                <% if get_columns(params).include?("created_at") %>
                    <td><%= format_date(project.created_at) %></td>
                <% end %>
                <td class="text-right">
                    <%= erp_datalist_row_actions(
                        [
                            {
                                text: '<i class="fa fa-edit"></i> '+t('edit'),
                                href: erp_projects.edit_backend_project_path(project)
                            },
                            {
                                divider: true
                            },
                            {
                                text: '<i class="fa fa-trash"></i> '+t('.delete'),
                                url: erp_projects.backend_project_path(project),
                                data_method: 'DELETE',
                                class: 'ajax-link',
                                data_confirm: t('delete_confirm')
                            }
                        ]
                    ) %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>
<% if @projects.empty? %>
    <div class="datalist-empty-line"><%= t('no_matching_records_found') %></div>
<% end %>

<%= erp_datalist_pagination(@projects) %>